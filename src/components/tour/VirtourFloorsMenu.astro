---
const floors = [
  { label: "Piso 1", hash: "0-afueras" },
  { label: "Piso 3", hash: "0-ascesor3" },
  { label: "Piso 4", hash: "0-ascensor4" },
  { label: "Piso 5", hash: "0-ascensor5" },
  { label: "Piso 6", hash: "0-ascensor6" },
  { label: "Piso 7", hash: "0-ascensor7" },
  { label: "Piso 8", hash: "0-ascensor8" },
  { label: "Piso 9", hash: "0-ascensor9" },
  { label: "Piso 10", hash: "0-ascensor10" },
  { label: "Piso 11", hash: "0-ascensor11" },
  { label: "Piso 12", hash: "0-ascensor12" },
  { label: "Piso 13", hash: "0-ascensor13" },
];
---

<aside class="virtour-floors-menu">
  <nav aria-label="Seleccionar piso">
    <ul>
      {floors.map(floor => (
        <li>
          <a href={`#${floor.hash}`}>
            #{floor.label}
          </a>
        </li>
      ))}
    </ul>
  </nav>
</aside>

<style>
  .virtour-floors-menu {
    position: fixed;
    top: 50%;
    left: 0;
    transform: translateY(-50%);
    z-index: 11000;
    background: rgba(30, 41, 59, 0.85);
    border-radius: 0 0.75rem 0.75rem 0;
    padding: 1rem 0.75rem;
    box-shadow: 2px 0 8px rgba(0,0,0,0.08);
    color: #fff;
    font-family: inherit;
    min-width: 90px;
    pointer-events: auto;
    transition: background 0.2s;
  }
  .virtour-floors-menu ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }
  .virtour-floors-menu li {
    margin-bottom: 0.5rem;
  }
  .virtour-floors-menu li:last-child {
    margin-bottom: 0;
  }
  .virtour-floors-menu a {
    color: #fff;
    text-decoration: none;
    font-weight: 500;
    padding: 0.25rem 0.5rem;
    border-radius: 0.375rem;
    display: block;
    transition: background 0.2s, color 0.2s;
  }
  .virtour-floors-menu a:hover {
    background: #fbbf24;
    color: #1e293b;
  }
  @media (max-width: 768px) {
    .virtour-floors-menu {
      display: none;
    }
  }
</style>
