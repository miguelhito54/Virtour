---
import VirtourFloorsMenu from "./VirtourFloorsMenu.astro";
---
<link
  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
  rel="stylesheet"
/>
<VirtourFloorsMenu />
<div class="virtour-container">
  <div class="overlay" id="rotate-overlay">
    <div class="overlay-content">
      <i class="fas fa-sync-alt rotate-icon"></i>
      <p class="rotate-text">Rote la pantalla</p>
    </div>
  </div>
  <iframe
    src="/pics/app-files/index.html"
    width="100%"
    height="100%"
    style="border: none;"
  >
  </iframe>
</div>

<style>
  /* Default styles for web and vertical phone */
  .virtour-container {
    width: 100%;
    height: 100dvh; /* Use dynamic viewport height to handle Safari's collapsing navbar */
    overflow: hidden;
    position: relative;
  }

  /* Overlay styles */
  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.7); /* Semi-transparent gray */
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 10000;
    color: white;
    font-family: Arial, sans-serif;
    text-align: center;
    transition:
      opacity 0.5s ease,
      visibility 0.5s ease;
  }

  .overlay-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 10px;
  }

  .rotate-icon {
    font-size: 1.8rem; /* Reduced by 40% from 3rem */
    animation: spin 2s linear infinite; /* Add spinning animation */
  }

  .rotate-text {
    font-size: 0.9rem; /* Reduced by 40% from default text size */
  }

  @keyframes spin {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  .overlay.hidden {
    opacity: 0;
    visibility: hidden;
  }

  /* Hide overlay on non-mobile devices */
  @media (min-width: 769px) {
    .overlay {
      display: none;
    }
  }

  /* Full-screen styles for landscape mode on mobile */
  @media (max-width: 768px) and (orientation: landscape) {
    .virtour-container {
      position: fixed;
      top: 0;
      left: 0;
      width: 100vw;
      height: 100dvh; /* Use dynamic viewport height here as well */
      z-index: 9999;
    }
    .overlay {
      display: none; /* Hide overlay in landscape mode */
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const overlay = document.getElementById("rotate-overlay");
    const iframe = document.querySelector(".virtour-container iframe") as HTMLIFrameElement | null;;
    let overlayTimeout: string | number | NodeJS.Timeout | undefined; 

    // Mostrar overlay (rotación)
    const showOverlay = () => {
      if (overlay) overlay.classList.remove("hidden");
      clearTimeout(overlayTimeout);
      overlayTimeout = window.setTimeout(() => {
        if (overlay) overlay.classList.add("hidden");
      }, 3000);
    };

    const handleResize = () => {
      if (window.innerWidth < window.innerHeight) showOverlay();
    };

    handleResize();
    window.addEventListener("resize", handleResize);

    // Escuchar clicks en los enlaces del menú
    document.querySelectorAll(".virtour-floors-menu a").forEach(link => {
      link.addEventListener("click", event => {
        event.preventDefault(); // evitar que el hash cambie en la página principal
        const targetHash = link.getAttribute("href");

        if (iframe && iframe.contentWindow && targetHash) {
          // Cambia el hash dentro del iframe
          iframe.contentWindow.location.hash = targetHash;
        }
      });
    });
  });
</script>
